<?xml version="1.0" encoding="UTF8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jc.mapper.TeacherMapper">

    <select id="selectTeacherTwos" resultMap="TeacherStudent">
        select s.id sid ,s.name sname,t.name tname,t.id tid
        from students s ,teachers t
        where s.tid = t.id
    </select>

    <resultMap id="TeacherStudent" type="teachertwo">
        <result property="id" column="tid"/>
        <result property="name" column="tname"/>
<!--
    处理集合元素，需要使用collection
-->
        <collection property="students" ofType="studenttwo">
            <result property="id" column="sid"/>
            <result property="name" column="sname"/>
            <result property="tid" column="tid"/>
        </collection>
    </resultMap>


</mapper>
